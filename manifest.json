{
  "manifest_version": 2,
  "name": "Pandora_DL",
  "version": "0.1",
  "permissions":[
  "downloads"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.pandora.com/station/play/*"
      ],
      "js": ["content.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "ct.png"
  }
}